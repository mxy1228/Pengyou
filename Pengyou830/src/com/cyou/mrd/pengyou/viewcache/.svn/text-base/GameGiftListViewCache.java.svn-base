package com.cyou.mrd.pengyou.viewcache;

import com.cyou.mrd.pengyou.R;

import android.view.View;
import android.widget.ImageView;
import android.widget.TextView;

public class GameGiftListViewCache {
	private View mView;
	private ImageView mGameIconIV;
	private ImageView mGameGiftProcessIV;
	private ImageView mGameGiftGotIV;
	private TextView  mGameNameTV;
	private TextView  mGameGiftCountTV;
	private TextView  mGameGiftLeftTV;
	private TextView  mGameGiftPercentTV;
	
	public GameGiftListViewCache(View view){
		this.mView = view;
	}

	public ImageView  getGameIconIV(){
		if(mGameIconIV == null){
			mGameIconIV = (ImageView)mView.findViewById(R.id.game_gift_pkg_item_gameicon);			
		}
		return mGameIconIV;
	}
	
	public ImageView  getGameGFProcessIV(){
		if(mGameGiftProcessIV == null){
			mGameGiftProcessIV = (ImageView)mView.findViewById(R.id.game_gift_pkg_item_giftprocess);			
		}
		return mGameGiftProcessIV;
	}

	public ImageView  getGameGFGotIV(){
		if(mGameGiftGotIV == null){
			mGameGiftGotIV = (ImageView)mView.findViewById(R.id.game_gift_pkg_item_giftgot);			
		}
		return mGameGiftGotIV;
	}
	
	public TextView  getGameNameTV(){
		
		if(mGameNameTV == null){
			mGameNameTV = (TextView)mView.findViewById(R.id.game_gift_pkg_item_gamename);			
		}
		return mGameNameTV;		
	}
	
	public TextView  getGameGFCountTV(){
		
		if(mGameGiftCountTV == null){
			mGameGiftCountTV = (TextView)mView.findViewById(R.id.game_gift_pkg_item_giftcount);			
		}
		return mGameGiftCountTV;		
	}

	public TextView  getGameGFLeftTV(){
		
		if(mGameGiftLeftTV == null){
			mGameGiftLeftTV = (TextView)mView.findViewById(R.id.game_gift_pkg_item_giftleft);			
		}
		return mGameGiftLeftTV;		
	}
	
	public TextView  getGameGFPercentTV(){
		
		if(mGameGiftPercentTV == null){
			mGameGiftPercentTV = (TextView)mView.findViewById(R.id.game_gift_pkg_item_giftpercent);			
		}
		return mGameGiftPercentTV;
		
	}
}
