	}

	public TextView getTxtPlayerCountSecond() {
		if (txtPlayerCountSecond == null) {
			txtPlayerCountSecond = (TextView) mView.findViewById(R.id.txt_playercount_second);
		}
		return txtPlayerCountSecond;
