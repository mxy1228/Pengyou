		}
		return recommenedGameLayoutSecond;
	}

	public ImageView getImgGamePictureFirst() {
		if (imgGamePictureFirst == null) {
			imgGamePictureFirst = (ImageView) mView.findViewById(R.id.recomend_game_pic_first);
		}
		return imgGamePictureFirst;
	}

	public TextView getTxtGameNameFirst() {
		if (txtGameNameFirst == null) {
			txtGameNameFirst = (TextView) mView.findViewById(R.id.recmomend_game_name_first);
		}
		return txtGameNameFirst;
	}

	public TextView getTxtPlayerCountFirst() {
		if (txtPlayerCountFirst == null) {
			txtPlayerCountFirst = (TextView) mView.findViewById(R.id.txt_playercount_first);
		}
		return txtPlayerCountFirst;
