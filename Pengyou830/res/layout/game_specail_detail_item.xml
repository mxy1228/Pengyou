<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/game_specail_detail_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/game_specail_detail_top_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_special_detail_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/game_specail_name_text_size"/>
            <TextView
                android:id="@+id/game_special_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_marginRight="10dip"
                android:layout_gravity="center_vertical"
                android:textColor="#969696"
                android:textSize="@dimen/sub_main"/>
        </LinearLayout>
        <ImageView 
            android:id="@+id/game_special_detail_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
        <TextView 
            android:id="@+id/game_special_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="8dip"
            android:textColor="#646464"
            android:textSize="@dimen/mid_text"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/game_specail_detail_item_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:paddingBottom="6dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="5dip"
        android:background="@drawable/game_specail_detail_middle_bg">
        <RelativeLayout
            android:layout_width="@dimen/avatar_width"
            android:gravity="center_vertical"
            android:layout_height="@dimen/avatar_height" >
            <ImageView
                android:id="@+id/img_gameicon"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_height"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_gamename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:singleLine="true"
                    android:textColor="@color/main"
                    android:textSize="@dimen/main" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_game"
                style="@style/middle_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/txt_playercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/game_list_sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_playgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/download_btn_xbg"
                android:textSize="@dimen/download_btn_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>