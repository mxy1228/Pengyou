<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/login_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="40.0dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_title"/>

    <RelativeLayout 
        android:id="@+id/login_pic_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_title_iv"
        android:gravity="center"
        android:layout_marginTop="40.0dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/login_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/login_pic1"/>
        <ImageView
            android:id="@+id/login_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="10.0dip"
            android:padding="8.0dip"
            android:layout_marginLeft="-14.0dip"
            android:layout_toRightOf="@id/login_pic1"
            android:src="@drawable/login_pic2"/>
        <ImageView
            android:id="@+id/login_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="-14.0dip"
            android:padding="8.0dip"
            android:layout_toRightOf="@id/login_pic2"
            android:src="@drawable/login_pic3"/>
        <ImageView
            android:id="@+id/login_pic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="5.0dip"
            android:scaleType="fitCenter"
            android:layout_marginLeft="-14.0dip"
            android:padding="8.0dip"
            android:layout_toRightOf="@id/login_pic3"
            android:src="@drawable/login_pic4"/>
        <ImageView
            android:id="@+id/login_pic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="-14.0dip"
            android:padding="8.0dip"
            android:layout_toRightOf="@id/login_pic4"
            android:scaleType="fitCenter"
            android:src="@drawable/login_pic5"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/login_pic_ll"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:orientation="vertical"
        android:paddingTop="30dip" >

        <LinearLayout
            android:id="@+id/btn_login_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_regist"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_tele_login" />

            <TextView
                android:id="@+id/btn_login_telephone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/login_tele_btn"
                android:textColor="@color/black"
                android:textSize="@dimen/main" />
        </LinearLayout>
 		<TextView
            android:id="@+id/txt_login_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="15dip"
            android:text="@string/login_tele_reset_password"
            android:textColor="#333333" />
        <Button
            android:id="@+id/btn_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_qq_btn"
            android:visibility="gone" />

        <!--  <LinearLayout
            android:id="@+id/btn_login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_login_regist"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_sina_login" />

            <TextView
                android:id="@+id/btn_login_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/login_sina_btn"
                android:textColor="@color/black"
                android:textSize="@dimen/main" />
        </LinearLayout>-->

        <Button
            android:id="@+id/btn_login_changyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_cyou_btn"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_login_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="60dip" 
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="15dip"
            android:text="@string/login_guest_btn"
            android:textColor="#333333" 
            android:visibility="gone"/>
       
    </LinearLayout>

</RelativeLayout>