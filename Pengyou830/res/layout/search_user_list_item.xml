<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_xbg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/you_may_know_item_top_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/small_padding"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding" >

        <com.cyou.mrd.pengyou.widget.RoundImageView
            android:id="@+id/you_may_known_item_avatar_iv"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_height"
            android:layout_marginRight="@dimen/small_padding" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/you_may_known_item_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/boy_sign"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/main"
                android:textSize="@dimen/main" />

            <TextView
                android:id="@+id/you_may_known_item_game_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/list_sub"
                android:visibility="gone" />

            <TextView
                android:id="@+id/you_may_known_item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/list_sub"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/you_may_known_focus_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_btn_normal"
            android:text="@string/focus" />
    </LinearLayout>

</LinearLayout>