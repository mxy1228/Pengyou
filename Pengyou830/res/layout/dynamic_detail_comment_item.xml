<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    android:background="@drawable/item_xbg">
	
    <com.cyou.mrd.pengyou.widget.RoundImageView
		android:id="@+id/dynamic_detail_comment_item_avatar_iv"
		android:layout_width="@dimen/small_avatar_width"
		android:layout_height="@dimen/small_avatar_height"
		attrs:small="true"
		android:layout_marginRight="5.0dip"/>
    
    <TextView
        android:id="@+id/dynamic_detail_comment_item_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textSize="@dimen/sub_main"
        android:layout_toRightOf="@id/dynamic_detail_comment_item_avatar_iv"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:text="昵称"/>
    
    <TextView 
        android:id="@+id/dynamic_detail_comment_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:12"
        android:textColor="@color/sub_main"
        android:textSize="@dimen/date_size"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/dynamic_detail_comment_item_nickname_tv"/>
    
    <TextView
        android:id="@+id/dynamic_detail_comment_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_main"
        android:textSize="@dimen/sub_main"
        android:layout_toRightOf="@id/dynamic_detail_comment_item_avatar_iv"
        android:layout_below="@id/dynamic_detail_comment_item_nickname_tv"
        android:layout_marginTop="2dip"
        android:text="我是内容我是内我是内容"/>
</RelativeLayout>