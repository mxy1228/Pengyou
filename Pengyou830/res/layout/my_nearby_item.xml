<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical" 
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/item_xbg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding"
        android:background="@color/empty_bg"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/nearby_item_xbg"
        android:padding="@dimen/nearby_item_border_width">
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingRight="5.0dip"
	        android:paddingLeft="3.0dip"
	        android:paddingTop="3.0dip"
	        android:paddingBottom="3.0dip"
	        android:gravity="center_vertical">
	        <com.cyou.mrd.pengyou.widget.RoundImageView
		        android:id="@+id/my_nearby_item_avatar_iv"
		        xmlns:attrs="http://schemas.android.com/apk/res-auto"
		        android:layout_width="@dimen/small_avatar_width"
		        android:layout_height="@dimen/small_avatar_height"
		        attrs:small="true"
		        attrs:bg_color="#FAFAFA"
		        android:layout_marginRight="4.0dip"/>
			<LinearLayout 
			    android:layout_width="0.0dip"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:layout_weight="1.0"
			    android:gravity="center_vertical">
			    <TextView
			        android:id="@+id/my_nearby_item_nickname_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:textColor="@color/main"
			        android:textSize="@dimen/main"
			        android:text="昵称"
			        android:drawableRight="@drawable/girl_sign"/>
			    <TextView
			        android:id="@+id/my_nearby_item_distance_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:textColor="@color/sub_main"
			        android:textSize="@dimen/sub_main"
			        android:layout_marginTop="2.0dip"
			        android:drawableLeft="@drawable/distance_pic"
			        android:text="100米以内"/>
			</LinearLayout>
			<Button 
			    android:id="@+id/my_nearby_item_attention_ibtn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/focus"
			    android:background="@drawable/focus_btn_xbg"/>
	    </LinearLayout>
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="#e6e7e8"/>
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="#FFFFFF"/>
		<TextView
	        android:id="@+id/my_nearby_item_game_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textColor="@color/sub_main"
	        android:textSize="@dimen/sub_main"
	        android:paddingLeft="8.0dip"
	        android:text="XXXXXXX"
	        android:background="#f3f4f5"/>
    </LinearLayout>
</LinearLayout>