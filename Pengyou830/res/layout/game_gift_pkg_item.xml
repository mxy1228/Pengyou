<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/empty_bg" >

    <ImageView
        android:id="@+id/game_gift_pkg_item_gameicon"
        android:layout_width="@dimen/avatar_width_new"
        android:layout_height="@dimen/avatar_height_new"
        android:layout_marginBottom="9.3dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="6.6dip"
        android:layout_marginTop="9.3dip"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/game_gift_pkg_item_gamename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="游戏名称"
                android:textColor="@color/main"
                android:textSize="@dimen/main" />

            <TextView
                android:id="@+id/game_gift_pkg_item_giftcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_gift_pkg_item_gamename"
                android:text="礼包名称"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/sub_main" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_below="@+id/game_gift_pkg_item_giftcount"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/game_gift_pkg_item_giftleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余 ："
                    android:layout_gravity="center"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/sub_main" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <LinearLayout
                        android:layout_width="100dip"
                        android:layout_height="16dip"
                        android:layout_gravity="center"
                        android:background="@drawable/game_giftpkg_process_bg" >

                        <ImageView
                            android:id="@+id/game_gift_pkg_item_giftprocess"
                            android:layout_width="40dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/game_giftpkg_process" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/game_gift_pkg_item_giftpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="42dip"
                        android:text="40%"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sub_main"
                        android:textColor="@color/divider_text_color" />
                </FrameLayout>
            </LinearLayout>
          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:src="@drawable/next_grey" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/game_gift_pkg_item_giftgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/game_giftpkg_got" />
    </RelativeLayout>

</LinearLayout>