<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        style="@style/divider"
        android:text="@string/bind_sina_hint3"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="66.0dip"
        android:padding="@dimen/padding"
        android:background="@color/empty_bg"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/bind_sina_hint1"
	        android:textSize="@dimen/mid_text"
	        android:textColor="#666666"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/bind_sina_hint2"
		    android:textSize="@dimen/mid_text"
	        android:textColor="#cc6633"
		    android:drawableLeft="@drawable/sina_icon"/>
		<Button 
		    android:id="@+id/you_may_known_footer_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15.0dip"
		    android:text="@string/bind_weibo"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:paddingTop="4.0dip"
		    android:paddingBottom="4.0dip"
		    android:paddingLeft="10.0dip"
		    android:paddingRight="10.0dip"
		    android:textSize="@dimen/main"
		    android:background="@drawable/bind_btn_xbg"/>
    </LinearLayout>
</LinearLayout>