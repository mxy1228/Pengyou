<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/item_xbg">
    <RelativeLayout 
        android:layout_width="48.0dip"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dynamic_item_time_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="4.0dip"
            android:src="@drawable/dynamic_item_time_pic"/>
        <TextView
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="#e3e9f1"
            android:layout_marginRight="1.0dip"
            android:layout_alignParentRight="true"/>
        <TextView 
            android:id="@+id/dynamic_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dynamic_item_time_bg"
            android:layout_marginTop="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_main"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dynamic_item_time_pic_iv"
            android:text="07-12"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="0.0dip"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/padding"
        android:paddingRight="8.0dip">
        
        <TextView
        	android:id="@+id/dynamic_item_name_tv"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/sub_main"
        	android:textSize="@dimen/mid_text"
        	android:gravity="center_vertical"
        	android:singleLine="true"
        	android:text="N/A用户昵称"
        	android:layout_marginLeft="@dimen/dynamic_margin_left"/>

        <TextView
            android:id="@+id/dynamic_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:layout_marginTop="@dimen/small_padding"
            android:text="N/A内容"
            android:textColor="@color/main"
            android:textSize="@dimen/main" />
        
        <ImageView
            android:id="@+id/dynamic_item_capture_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:padding="2dip"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:visibility="gone"
            android:background="@drawable/relation_item_xbg"
            android:src="@drawable/capture_default"/>

         <LinearLayout 
            android:id="@+id/dynamic_item_rating_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:layout_marginTop="@dimen/small_padding"
            android:gravity="center_vertical"
            android:paddingTop="2dip"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_main"
                android:textColor="#7c7c7c"
                android:text="@string/me_game_score_display"/>
            <RatingBar 
                android:id="@+id/dynamic_item_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ratingbar"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/dynamic_item_game_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:paddingLeft="8.0dip"
            android:paddingTop="8.0dip"
            android:gravity="center_vertical"
            android:background="@drawable/relation_item_xbg">
            <ImageView 
                android:id="@+id/dynamic_item_game_icon_iv"
                android:layout_width="@dimen/small_avatar_width"
                android:layout_height="@dimen/small_avatar_height"
                android:paddingBottom="8.0dip"
                android:paddingRight="8.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_default"
                android:layout_marginRight="6.0dip"/>

            <RelativeLayout 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/dynamic_item_game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="@dimen/main"
                    android:text="N/A游戏名称"
                    android:singleLine="true"/>
                <TextView 
                    android:id="@+id/dynamic_item_game_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"
                    android:text="游戏类型"
                    android:layout_below="@id/dynamic_item_game_name_tv"
                    android:layout_marginTop="@dimen/small_padding"/>
                <TextView
                    android:id="@+id/dynamic_item_game_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"
                    android:layout_toRightOf="@id/dynamic_item_game_type_tv"
                    android:layout_below="@id/dynamic_item_game_name_tv"
                    android:layout_marginLeft="4.0dip"
                    android:gravity="top"
                    android:layout_marginRight="4.0dip"
                    android:text="|"/>
                <TextView
                    android:id="@+id/dynamic_item_play_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dynamic_item_game_name_tv"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/dynamic_item_game_divider"
                    android:layout_marginTop="@dimen/small_padding"
                    android:text="N/A玩次数"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"/>
            </RelativeLayout>

           <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
               >
           <ImageView
               android:id="@+id/dynamic_item_game_zone_from"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="0dip"
               android:layout_alignParentBottom="true"
               android:src="@drawable/from_gamezone_icon"
               android:visibility="gone" />
 
         </RelativeLayout >

        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:orientation="horizontal">
               <TextView 
	            android:id="@+id/dynamic_item_date_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="#c0c0c0"
	            android:gravity="center_vertical"
	            android:layout_marginRight="3dip"
	            android:textSize="13.0sp"/>        

              <TextView
                  android:id="@+id/dynamic_item_from_tv"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.0"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:text=""
                  android:layout_marginRight="3dip"
                  android:layout_gravity="center_vertical"
                  android:textColor="#265FA5"
                  android:textSize="13.0sp"
                  android:visibility="visible" />
       
            <Button 
                android:id="@+id/dynamic_item_support_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dynamic_support_btn_xbg"
                android:gravity="center_vertical"
                android:textColor="@color/main"/>
            <Button
                android:id="@+id/dynamic_item_comment_btn"
                android:layout_marginLeft="6.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dynamic_comment_btn_xbg2"/>
        </LinearLayout>
        
        <RelativeLayout 
            android:id="@+id/dynamic_item_comment_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:layout_marginLeft="4.0dip"
            android:visibility="gone"
            android:background="@drawable/dynamic_comment_bg">
            
            <TextView
                android:id="@+id/dynamic_item_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
            <ProgressBar 
	            android:id="@+id/dynamic_item_comment_item_pb"
		        android:layout_width="23dip" 
		        android:layout_height="23dip"
		        android:visibility="gone"
		        style="@style/loading_progressbar"
		        android:indeterminate="false"
		        android:layout_centerHorizontal="true"
		        android:indeterminateDrawable="@anim/loading_small" />
	        
	        <TextView
	            android:id="@+id/dynamic_item_comment_item_empty_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:textSize="@dimen/list_sub"
	            android:textColor="@color/empty_text_color"
	            android:text="@string/no_comment"/>
            
            <Button 
                android:id="@+id/dynamic_comment_item_pack_up_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dynamic_item_comment_tv"
                android:background="@null"
                android:textColor="#7291b7"
                android:textSize="@dimen/sub_main"
                android:text="@string/pack_up"/>
            
            
            <ImageButton
                android:id="@+id/dynamic_comment_item_comment_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_item_comment_tv"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/comment_btn_normal"/>
	        
        </RelativeLayout>
        
        <com.cyou.mrd.pengyou.widget.DotTextView
            android:layout_width="match_parent"
            android:layout_height="3.0px"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="0.0dip"/>
    </LinearLayout>
</LinearLayout>