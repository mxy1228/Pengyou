<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recommend_friend_item_height"
    android:background="@color/empty_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/similar_game_icon"
        android:layout_width="@dimen/avatar_height"
        android:layout_height="@dimen/avatar_width"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/similar_game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/main"
            android:textSize="@dimen/guess_game_item_size" />

        <TextView
            android:id="@+id/similar_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/main"
            android:textSize="@dimen/guess_game_item_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/similar_game_frdcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#7c7c7c"
        android:visibility="gone" />

</LinearLayout>