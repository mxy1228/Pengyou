<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >  	<RelativeLayout          android:layout_width="fill_parent"        android:layout_height="wrap_content"       	android:background="@color/gamestore_top_default"        android:orientation="vertical"    >     	<View    		android:id="@+id/gamestore_footview_up_divider"    		android:layout_width="fill_parent"    		android:layout_height="1dip"    		android:background="#d0d1d2">        </View>        <View             android:id="@+id/gamestore_footview_samll_divider"            android:layout_below ="@+id/gamestore_footview_up_divider"            android:layout_width="fill_parent"            android:layout_height="1dip"             android:background="#f7f7f7">        </View>		<TextView			android:id ="@+id/gamestore_footview_divider"            android:layout_width="fill_parent"            android:layout_height="30dip"            android:gravity="center"               android:layout_below ="@+id/gamestore_footview_samll_divider"             android:layout_marginTop="2dip"    		            android:text="@string/mygame_guess_youlike_title"            android:textColor="@color/divider_text_color"            android:textSize="@dimen/divider_text_size" />	    <com.cyou.mrd.pengyou.widget.pull2refresh.PullToRefreshListView	   	    android:id="@+id/gamestore_footview_guess_lstview"	        android:layout_width="fill_parent"	        android:layout_height="wrap_content"	        android:layout_marginLeft="8dip"	    	android:layout_marginRight="8dip"	        android:background="@drawable/gamestore_guess_background"	        android:layout_below ="@+id/gamestore_footview_divider"	        android:cacheColorHint="#00000000"	        android:fadingEdge="none" >	  	</com.cyou.mrd.pengyou.widget.pull2refresh.PullToRefreshListView>	  	<View            android:layout_width="fill_parent"            android:layout_height="10dip"            android:layout_below="@+id/gamestore_footview_guess_lstview"/>     </RelativeLayout></LinearLayout>