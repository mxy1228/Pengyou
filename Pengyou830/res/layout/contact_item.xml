<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/item_xbg">
    <TextView 
        android:id="@+id/contact_item_top_tv"
        android:layout_width="match_parent"
        android:layout_height="30.0dip"
  	    android:gravity="center_vertical"
        android:textColor="@color/main"
        android:textSize="@dimen/main"
        android:visibility="gone"
        android:paddingLeft="@dimen/padding"
        android:background="@drawable/divider_bg"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:padding="@dimen/padding">
	    <TextView
	        android:id="@+id/contact_item_name_tv"
	        android:layout_width="70.0dip"
	        android:layout_height="match_parent"
	        android:textStyle="bold"
	        android:textColor="@color/main"
	        android:textSize="@dimen/main"
	        android:gravity="center"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:text="XXXXXXXX"/>
	    <TextView
	        android:id="@+id/contact_item_num_tv"
	        android:layout_width="0.0dip"
	        android:layout_weight="1.0"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textColor="@color/main"
	        android:textSize="@dimen/main"
	        android:singleLine="true"
	        android:layout_marginLeft="5.0dip"
	        android:text="18418478234"/>
       <Button 
	        android:id="@+id/contact_item_letter_ibtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:text="@string/invite"
	        android:layout_marginRight="11.0dip"
	        android:gravity="center"
	        android:background="@drawable/contact_invite_btn_normal"/>
	</LinearLayout>
</LinearLayout>