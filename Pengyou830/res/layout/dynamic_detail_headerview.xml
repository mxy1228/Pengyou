<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/empty_bg">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="@dimen/padding">
	    
	    <com.cyou.mrd.pengyou.widget.RoundImageView
	        android:id="@+id/dynamic_detail_avatar_iv"
	        android:layout_width="@dimen/avatar_width"
	        android:layout_height="@dimen/avatar_height"/>
	    
	    <LinearLayout 
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:layout_marginLeft="@dimen/small_padding"
	        android:orientation="vertical">
	      <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/small_padding"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/dynamic_detail_nickname_tv"
	            android:layout_width="0.0dip"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:layout_weight="1.0"
	            android:textColor="@color/sub_main"
	            android:textSize="@dimen/sub_main"/>
	         <TextView
	            android:id="@+id/dynamic_detail_time_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/small_padding"
	            android:singleLine="true"
	            android:textSize="@dimen/date_size"
	            android:textColor="@color/sub_main"
	            android:text=""/>
	          </LinearLayout>
	        
	        <TextView
	            android:id="@+id/dynamic_detail_content_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/small_padding"
	            android:textColor="@color/main"
	            android:textSize="@dimen/main"/>
	       
	       <RelativeLayout 
	           android:id="@+id/dynamic_detail_capture_rl"
	           android:visibility="gone"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content">
	           <ImageView
		            android:id="@+id/dynamic_detail_capture_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/relation_item_xbg"
		            android:scaleType="fitXY"
		            android:padding="2dip"
		            android:adjustViewBounds="true"
		            android:src="@drawable/capture_default"/>
	           <ProgressBar 
	               android:id="@+id/dynamic_detail_capture_pb"
	               android:layout_centerInParent="true"
	               android:visibility="gone"
	               android:layout_width="23dip" 
			        android:layout_height="23dip"
			        style="@style/loading_progressbar"
			        android:indeterminate="false"
			        android:indeterminateDrawable="@anim/loading_small"/>
	       </RelativeLayout>
	       
	       <LinearLayout 
                android:id="@+id/dynamic_detail_item_rating_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/dynamic_detail_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sub_main"
                android:textColor="#7c7c7c"
                android:text="@string/me_game_score_display"/>
            <RatingBar 
                android:id="@+id/dynamic_detail_item_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ratingbar"/>
            </LinearLayout>
	        
	        <LinearLayout 
                android:id="@+id/dynamic_detail_item_game_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:paddingTop="8.0dip"
                android:gravity="center_vertical" 
                android:visibility="gone"          
                android:background="@drawable/relation_item_xbg">
              <ImageView 
                android:id="@+id/dynamic_detail_item_game_icon_iv"
                android:layout_width="@dimen/small_avatar_width"
                android:layout_height="@dimen/small_avatar_height"
                android:scaleType="fitCenter"
                android:paddingBottom="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/icon_default"
                android:layout_marginRight="6.0dip"/>
              <RelativeLayout 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/dynamic_detail_item_game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="@dimen/main"
                    android:text=""
                    android:singleLine="true"/>
                <TextView 
                    android:id="@+id/dynamic_detail_item_game_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"
                    android:text=""
                    android:layout_below="@id/dynamic_detail_item_game_name_tv"
                    android:layout_marginTop="@dimen/small_padding"/>
                <TextView
                    android:id="@+id/dynamic_detail_item_game_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"
                    android:layout_toRightOf="@id/dynamic_detail_item_game_type_tv"
                    android:layout_below="@id/dynamic_detail_item_game_name_tv"
                    android:layout_marginLeft="4.0dip"
                    android:gravity="top"
                    android:layout_marginRight="4.0dip"
                    android:text="|"/>
                <TextView
                    android:id="@+id/dynamic_detail_item_play_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dynamic_detail_item_game_name_tv"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/dynamic_detail_item_game_divider"
                    android:layout_marginTop="@dimen/small_padding"
                    android:text=""
                    android:textColor="@color/sub_main"
                    android:textSize="@dimen/list_sub"/>
              </RelativeLayout>
              <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
               >
              <ImageView
                android:id="@+id/dynamic_detail_item_game_zone_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dip"
                android:layout_alignParentBottom="true"
                android:src="@drawable/from_gamezone_icon"
                android:visibility="gone" />
 
         </RelativeLayout >
           </LinearLayout>
	       <TextView
                  android:id="@+id/dynamic_detail_item_from_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:text=""
                  android:layout_gravity="center_vertical"
                  android:textColor="#265FA5"
                  android:textSize="13.0sp"
                  android:visibility="visible" />
	      
	    </LinearLayout>
	</LinearLayout>
    
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:adjustViewBounds="true"
	    android:background="@drawable/dynamic_detail_divider_xbg"/>
	
	<LinearLayout 
	    android:id="@+id/dynamic_supporter_ll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#656565"
	    android:gravity="center_vertical"
	    android:padding="@dimen/padding">
	    <TextView 
	        android:id="@+id/dynamic_detail_support_count_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffe400"
	        android:textSize="@dimen/list_sub"
	        android:gravity="center"
	        android:drawableTop="@drawable/dynamic_detail_support_pic"/>
	    <HorizontalScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="48.0dip"
	        android:background="#666666"
	        android:fadingEdge="none"
	        android:cacheColorHint="#00000000"
	        android:scrollbars="none">
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="48.0dip"
	            android:gravity="center"
	            android:orientation="horizontal">
	            <GridView
			        android:id="@+id/dynamic_detail_support_gv"
			        android:layout_width="match_parent"
			        android:layout_height="48.0dip"
			        android:listSelector="@null"
			        android:cacheColorHint="#00000000"
			        android:gravity="center"/>
	        </LinearLayout>
	    </HorizontalScrollView>
	</LinearLayout>

	<TextView
	    android:id="@+id/dynamic_detail_comment_count_tv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="@dimen/padding"
	    android:paddingRight="@dimen/padding"
	    android:textSize="@dimen/sub_main"
	    android:textColor="@color/sub_main"
	    android:gravity="center_vertical"
	    android:singleLine="true"
	    android:background="@drawable/divider_bg"/>
	
	<TextView 
	    android:id="@+id/dynamic_detail_empty_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/main"
	    android:textColor="@color/empty_text_color"
	    android:visibility="gone"
	    android:layout_marginTop="60.0dip"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:text="@string/no_comment"/>
</LinearLayout>