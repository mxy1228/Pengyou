<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/empty_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/edit_headerbar"
        layout="@layout/sub_header_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/line_regist_boder"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="60dp"
            android:layout_height="@dimen/login_text_height"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="+86"
            android:textColor="#7c7c7c"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_telephone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_text_height"
            android:layout_toRightOf="@id/txt_title"
            android:background="@color/white"
            android:hint="@string/login_tele_hint"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="5dip"
            android:singleLine="true" />
    </RelativeLayout>

    <!--  <TextView
        android:id="@+id/txt_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:gravity="right"
        android:text="@string/regist_text_login_txt"
        android:textColor="#265fa5" />-->

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/personal_line" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/regist_text_info"
        android:textColor="@color/gray" />

</LinearLayout>