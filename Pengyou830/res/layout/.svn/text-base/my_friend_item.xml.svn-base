<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_xbg"
    android:descendantFocusability="blocksDescendants" 
    android:gravity="center_vertical" xmlns:app="http://schemas.android.com/apk/res/com.cyou.mrd.pengyou">
    <TextView 
        android:id="@+id/my_friend_item_top_tv"
        android:layout_width="match_parent"
        android:layout_height="30.0dip"
        android:textStyle="bold"
  	    android:gravity="center_vertical"
        android:textColor="@color/main"
        android:textSize="@dimen/main"
        android:visibility="gone"
        android:background="@drawable/divider_bg"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_xbg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/padding">
        <com.cyou.mrd.pengyou.widget.RoundImageView
	        android:id="@+id/my_friend_item_avater_iv"
	        android:layout_width="@dimen/avatar_width"
	        android:layout_height="@dimen/avatar_height"
	        attrs:bg_color="@color/empty_bg"
	        android:layout_marginRight="@dimen/padding_left_right"/>
	   <LinearLayout 
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:gravity="center_vertical"
	        android:orientation="vertical">
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical">
	            <TextView
			        android:id="@+id/my_friend_item_nickname_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:textColor="@color/main"
			        android:textSize="@dimen/main"
			        android:maxEms="8"
			        android:drawableRight="@drawable/boy_sign"/>
		        <ImageView
		            android:id="@+id/my_friend_item_each_focus_iv"
		            android:layout_width="30.0dip"
		            android:layout_height="wrap_content"
		            android:src="@drawable/each_focus_new"
		            android:adjustViewBounds="true"/>
	        </LinearLayout>
		    <TextView
		        android:id="@+id/my_friend_item_game_count_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/small_padding"
		        android:singleLine="true"
		        android:text="XXXXX"
		        android:textColor="@color/sub_main"
		        android:textSize="@dimen/list_sub"/>
		    <TextView
		        android:id="@+id/my_friend_item_game_detail_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/small_padding"
		        android:singleLine="true"
		        android:text="XXXXX"
		        android:textColor="@color/sub_main"
		        android:textSize="@dimen/list_sub"/>
	   </LinearLayout>
	   <Button 
	        android:id="@+id/my_friend_item_letter_ibtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:visibility="gone"
	        android:text="@string/letter"
	        android:background="@drawable/sixin_btn_xbg"/>
	   <Button 
	        android:id="@+id/my_friend_item_focus_ibtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:text="@string/focus"
	        android:background="@drawable/focus_btn_xbg"/>
    </LinearLayout>
</LinearLayout>