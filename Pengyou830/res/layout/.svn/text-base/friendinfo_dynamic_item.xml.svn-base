<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:descendantFocusability="blocksDescendants"
    android:background="@color/empty_bg">
    <RelativeLayout 
        android:layout_width="48.0dip"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/friendinfo_dynamic_item_time_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="4.0dip"
            android:src="@drawable/dynamic_item_time_pic"/>
        <TextView
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="#e3e9f1"
            android:layout_marginRight="1.0dip"
            android:layout_alignParentRight="true"/>
        <TextView 
            android:id="@+id/friendinfo_dynamic_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dynamic_item_time_bg"
            android:layout_marginTop="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_main"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/friendinfo_dynamic_item_time_pic_iv"
            android:text="07-12"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical">
        <TextView
                android:id="@+id/friendinfo_dynamic_item_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/mid_text"
                android:text=""
                android:layout_marginRight="@dimen/dynamic_margin_left"
                android:layout_marginLeft="@dimen/dynamic_margin_left"
                android:visibility="gone"
                android:textColor="@color/sub_main"/>
        
        <TextView
            android:id="@+id/friendinfo_dynamic_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:visibility="visible"
            android:layout_marginTop="@dimen/small_padding"
            android:textSize="@dimen/main"
            android:textColor="@color/main"/>
        <TextView
            android:id="@+id/friendinfo_dynamic_item_content_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:layout_marginTop="@dimen/small_padding"
            android:visibility="gone"
            android:textSize="@dimen/mid_text"
            android:textColor="#91b2d4"/>
         
        <ImageView
            android:id="@+id/friendinfo_dynamic_item_capture_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="2dip"
            android:background="@drawable/relation_item_xbg"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/capture_default"/>
         
        <LinearLayout
            android:id="@+id/friendinfo_dynamic_item_score_display"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:orientation="horizontal"
            android:visibility="gone" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/game_score_display" 
                android:textSize="@dimen/main"
                android:layout_marginRight="3dip"
                android:gravity="center_vertical"
                 />

            <RatingBar
                android:id="@+id/friendinfo_dynamic_item_rating_rb"
                style="@style/middle_ratingbar"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/friendinfo_dynamic_item_game_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:layout_marginBottom="3dip"
            android:background="@drawable/relation_item_xbg">
            <ImageView
                android:id="@+id/friendinfo_dynamic_item_game_icon_iv"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginTop="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:src="@drawable/icon_default"/>
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/friendinfo_dynamic_item_game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/dynamic_margin_left"
                    android:textSize="@dimen/main"
                    android:textColor="@color/main"
                    android:singleLine="true"/>
 
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:orientation="horizontal">
                 <TextView
                    android:id="@+id/friendinfo_dynamic_item_game_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dip"
                    android:textSize="13.0sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/sub_main"/>
                 <View 
                     android:layout_height="14dip"
                     android:layout_width="2dip"
                     android:layout_gravity="center"
                     android:layout_marginRight="14dip"
                     android:background="@color/relation_circle_seg_line"/>
                <TextView
                    android:id="@+id/friendinfo_dynamic_item_game_playercount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.0sp"
                    android:layout_gravity="bottom"
                    android:visibility="visible"
                    android:textColor="@color/sub_main"/>
            </LinearLayout>
          </LinearLayout> 
           <!-- ImageView
                    android:id="@+id/friendinfo_dynamic_item_game_icon_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="0dip"
                    android:layout_marginTop="4dip"
                    android:src="@drawable/ios_from_flag"
                    android:visibility="gone"/ --> 
           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:orientation="vertical">
           <ImageView
                    android:id="@+id/friendinfo_dynamic_item_game_icon_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:layout_marginRight="0dip"
                    android:layout_gravity="right|top"
                    android:src="@drawable/ios_from_flag"
                    android:visibility="gone"/> 
         
           <!-- RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
               -->
                <View 
                     android:layout_height="0dip"
                     android:layout_width="1dip"
                     android:layout_weight="1.0"/>

           <ImageView
               android:id="@+id/friendinfo_dynamic_item_game_zone_from"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom"
               android:src="@drawable/from_gamezone_icon"
               android:visibility="gone" />
 
         <!-- /RelativeLayout -->
         </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/friendinfo_dynamic_item_comment_rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dip"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:paddingBottom="@dimen/padding"
            android:background="@drawable/dynamic_comment_bg2">
          
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/friendinfo_dynamic_item_comment_head"
                android:layout_marginLeft="6dip"
                android:gravity="center"
                android:orientation="horizontal">
                <!--ImageView
                    android:id="@+id/relationship_circle_item_support_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="4dip"
                    android:layout_gravity="top"
                    android:visibility="visible"
                    android:src="@drawable/supported_icon"/-->
                <TextView 
                    android:id="@+id/friendinfo_dynamic_item_suport_users"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/mid_text"
                    android:textColor="#265fa5"
                    android:text=""/>
                <Button
                    android:id="@+id/friendinfo_dynamic_item_comment_btn_pull"
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6.0dip"
                    android:layout_marginRight="6.0dip"
                    android:layout_marginTop="1dip"
                    android:visibility="gone"
                    android:background="@drawable/dynamic_item_more_comment_pic"/>              
            </LinearLayout>
            <View 
                android:id="@+id/friendinfo_dynamic_item_comment_seg_line"
                android:layout_width="match_parent"
                android:layout_height="1.33dip"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="3dip"
                android:background="@drawable/relation_circle_comment_seg_line"/>
       <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/friendinfo_dynamic_item_comment_rl"
                android:visibility="visible"
                android:layout_marginLeft="6dip"
                android:orientation="vertical">
       </LinearLayout>                    
            
            <ProgressBar 
                android:id="@+id/friendinfo_dynamic_item_comment_item_pb"
                android:layout_width="23dip" 
                android:layout_height="23dip"
                android:visibility="gone"
                style="@style/loading_progressbar"
                android:indeterminate="false"
                android:layout_gravity="center_horizontal"
                android:indeterminateDrawable="@anim/loading_small" />
            
            <TextView
                android:id="@+id/friendinfo_dynamic_item_comment_item_empty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/mid_text"
                android:text="@string/net_error_loading_data"/>
            <Button 
                   android:id="@+id/friendinfo_dynamic_item_pack_up_btn"
                   android:layout_width="40.0dip"
                   android:layout_height="25.0dip"
                   android:background="@null"
                   android:gravity="bottom"
                   android:paddingLeft="6dip"
                   android:textColor="#91b2d4"
                   android:textSize="@dimen/mid_text"
                   android:layout_marginTop="@dimen/small_padding"
                   android:text="@string/pack_up"/>
            
            <!--  LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/relationship_circle_item_pack_up_line"
                android:padding="@dimen/small_padding">
                
                
                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"/>
                
                <LinearLayout 
                    android:id="@+id/relationship_circle_item_sub_comment_ll"
                    android:layout_width="40.0dip"
                    android:layout_height="25.0dip"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="right|bottom">
                    <ImageButton
                       android:id="@+id/relationship_circle_item_comment_ibtn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@null"
                       android:src="@drawable/comment_btn_normal"/>
                </LinearLayout>
            </LinearLayout -->
                
        </LinearLayout>
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dynamic_margin_left"
            android:layout_marginLeft="@dimen/dynamic_margin_left"
            android:layout_marginTop="6.0dip"
            android:orientation="horizontal">
            
              <TextView 
	            android:id="@+id/friendinfo_dynamic_item_date_tv"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:layout_weight="1.0"
	            android:textColor="#c0c0c0"
	            android:gravity="center_vertical"
	            android:textSize="13.0sp"/>
              
          <!-- LinearLayout
              android:id="@+id/friendinfo_dynamic_item_from"
              android:layout_width="0dip"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dip"
              android:layout_marginRight="2dip"
              android:layout_weight="1.0"
              android:orientation="horizontal"
              android:visibility="invisible" >

              <TextView
                  android:id="@+id/friendinfo_dynamic_item_from_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:text=""
                  android:layout_gravity="center_vertical"
                  android:textColor="#265FA5"
                  android:textSize="13.0sp"
                  android:visibility="visible" /-->

              <!-- ImageView
                  android:id="@+id/relationship_circle_item_game_from"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2.0dip"
                  android:src="@drawable/ios_from_icon"
                  android:visibility="gone" / -->
          <!-- /LinearLayout-->
         
            <Button 
                android:id="@+id/friendinfo_dynamic_item_support_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dynamic_support_btn_xbg"/>
            
            <Button
                android:id="@+id/friendinfo_dynamic_item_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:background="@drawable/dynamic_comment_btn_xbg"/>
    
        </LinearLayout>  
        <com.cyou.mrd.pengyou.widget.DotTextView
            android:layout_width="match_parent"
            android:layout_height="3.0px"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="0.0dip"/>     
    </LinearLayout>
</LinearLayout>