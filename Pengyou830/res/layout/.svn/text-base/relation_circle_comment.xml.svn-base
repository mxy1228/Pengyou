<?xml version="1.0" encoding="utf-8"?>
<com.cyou.mrd.pengyou.widget.ResizeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relationship_circle_root_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/relationship_circle_comment_ll"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true" 
        android:background="@drawable/friend_search_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4.0dip" >

        <EditText
            android:id="@+id/relationship_circle_comment_et"
            style="@style/comment_edit"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/search_bg"
            android:textColor="@android:color/black" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/relationship_circle_comment_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="2.0dip"
            android:background="@drawable/bottom_comment_btn_xbg"
            android:paddingBottom="6.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="6.0dip"
            android:text="发送"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</com.cyou.mrd.pengyou.widget.ResizeLayout>
