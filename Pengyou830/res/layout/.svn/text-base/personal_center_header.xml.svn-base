<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_center_header_bg">
    <FrameLayout 
        android:id="@+id/personal_center_avatar_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.7dip"
        android:layout_centerHorizontal="true">
        <RelativeLayout 
            android:layout_width="56dip"
            android:layout_height="56dip">
            <ImageView 
		        android:id="@+id/personal_center_avatar_iv"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="3px"
				android:scaleType="fitXY"
				android:src="@drawable/avatar_defaul"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/personal_center_avatar_layer"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/personal_center_info_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="right|bottom"
            android:background="@drawable/img_progress_10"
            android:textSize="@dimen/person_progress_size"/>
    </FrameLayout>
     
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:padding="5.3dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="4.0dip"
        android:background="@drawable/personal_center_sns_bg">
        <ImageView 
            android:id="@+id/personal_center_phone_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/phone_light"/>
        <ImageView 
            android:id="@+id/personal_center_sina_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_marginLeft="18.7dip"
            android:src="@drawable/sina_light"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/personal_center_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/personal_center_avatar_rl"
        android:textColor="@color/white"
        android:text="用户昵称"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>
    
    <TextView
        android:id="@+id/personal_center_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:singleLine="true"
        android:maxEms="20"
        android:maxLength="20"
        android:text="用户签名"
        android:layout_below="@id/personal_center_nickname_tv"
        android:layout_marginTop="8.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:textSize="14sp"/>
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/personal_center_sign_tv"
         android:layout_marginTop="8.3dip"
         android:layout_marginBottom="4.0dip"
         android:background="#30000000"
         android:orientation="horizontal">
        
        <RelativeLayout 
            android:id="@+id/personal_center_focus_rl"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            
            android:background="@drawable/personal_center_item_xbg"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/personal_center_focus_count_tv"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center"
	             android:layout_centerHorizontal="true"
	             android:singleLine="true"
	             android:textSize="17.3sp"
	             android:textColor="@color/white"
	             android:text="162"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/focus"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/personal_center_focus_count_tv"/>
        </RelativeLayout>
        
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4.5dip"
            android:background="#77FFFFFF"/>
        
         <RelativeLayout 
            android:id="@+id/personal_center_fans_rl"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_center_item_xbg"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/personal_center_fans_count_tv"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center"
	             android:layout_centerHorizontal="true"
	             android:singleLine="true"
	             android:textSize="17.3sp"
	             android:textColor="@color/white"
	             android:text="162"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pc_fans_title"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/personal_center_fans_count_tv"/>
            <Button 
	            android:id="@+id/personal_center_fans_dot_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/personal_center_fans_count_tv"
	            android:textColor="@color/msg_count_text_color"
	            android:textSize="@dimen/msg_count_text_size"
	            android:visibility="gone"
	            android:background="@drawable/message_count"/>
        </RelativeLayout>
        
         <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4.5dip"
            android:background="#77FFFFFF"/>
         
         <RelativeLayout 
            android:id="@+id/personal_center_dynamic_rl"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_center_item_xbg"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/personal_center_dynamic_count_tv"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center"
	             android:layout_centerHorizontal="true"
	             android:singleLine="true"
	             android:textSize="17.3sp"
	             android:textColor="@color/white"
	             android:text="162"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dynamic"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/personal_center_dynamic_count_tv"/>
        </RelativeLayout>
        
     </LinearLayout>

</RelativeLayout>