<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/item_xbg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="3dip" >

        <RelativeLayout
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_height" >

            <ImageView
                android:id="@+id/img_gameicon"
                android:layout_width="@dimen/avatar_width"
                android:layout_height="@dimen/avatar_height"
                android:layout_marginRight="5.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="@dimen/avatar_height"
            android:layout_marginLeft="3dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_gamename"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="top"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main"
                android:textSize="@dimen/main" />

            <TextView
                android:id="@+id/txt_playercount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/game_list_sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/downloading_btn_xbg"
                android:gravity="center"
                android:text="@string/download_btn_update"
                android:textColor="@color/sub_main"
                android:textSize="@dimen/download_btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>