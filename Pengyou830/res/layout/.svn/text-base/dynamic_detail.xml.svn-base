<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/empty_bg" xmlns:app="http://schemas.android.com/apk/res/com.cyou.mrd.pengyou">
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >
    <LinearLayout
        android:id="@+id/dynamic_detail_header" 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/header_bar_height"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    android:background="@drawable/header_bar_bg">
	    <ImageButton 
	        android:id="@+id/dynamic_detail_back_ibtn"
	        android:layout_width="50.0dip"
	        android:layout_height="fill_parent"
	        android:background="@drawable/back_btn_xbg"
	        android:src="@drawable/back_btn_bg"/>
		<TextView 
		    android:id="@+id/dynamic_detail_header_tv"
		    android:layout_width="0.0dip"
		    android:layout_weight="1.0"
		    android:layout_height="match_parent"
		    android:singleLine="true"
		    android:layout_gravity="center"
		    android:textColor="@color/white"
		    android:textSize="22.0sp"
		    android:gravity="center"/>
		<ImageButton 
            android:id="@+id/dynamic_detail_delete_ibtn"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/dynamicdetail_delete_btn"/>
		<Button
            android:id="@+id/sub_header_bar_right_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:background="@null"
            android:clickable="false"
            android:gravity="center"
            android:minWidth="50.0dip"
            android:paddingBottom="6.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="6.0dip"
            android:scaleType="fitCenter"
            android:textColor="@color/white"
            android:textSize="@dimen/main" />
	</LinearLayout>
	
	<com.cyou.mrd.pengyou.widget.pull2refresh.PullToRefreshListView
	    android:id="@+id/dynamic_detail_comment_lv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/dynamic_detail_header"   
	    android:fadingEdge="none"/>
	
	<TextView
	    android:id="@+id/dynamic_detail_comment_devide"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/dynamic_detail_comment_lv"   
        android:background="@drawable/pull_fresh_list_divider"/>

	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="4.0dip"
	    android:gravity="center_vertical"
	    android:layout_gravity="bottom"
	    android:background="@drawable/friend_search_bg">
	    <EditText
	        android:id="@+id/dynamic_detail_et"
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:hint="@string/comment"
	        style="@style/comment_edit"
	        android:background="@drawable/search_bg"/>
	    <Button
	        android:id="@+id/dynamic_detail_send_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="@dimen/main"
	        android:layout_marginLeft="4.0dip"
	        android:gravity="center"
	        android:paddingLeft="5.0dip"
	        android:paddingRight="5.0dip"
	        android:paddingTop="7.0dip"
	        android:paddingBottom="7.0dip"
	        android:background="@drawable/header_btn_xbg"
	        android:text="@string/send"/>
	</LinearLayout>
</LinearLayout>