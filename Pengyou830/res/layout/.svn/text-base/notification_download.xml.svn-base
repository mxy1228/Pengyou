<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:background="#F3F4F5"
    android:paddingTop="8.0dip"
    android:paddingLeft="4.0dip"
    android:paddingBottom="8.0dip">
    <ImageView
        android:id="@+id/notification_download_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/icon"/>
    <ImageView 
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_gravity="center_vertical"
        android:background="#cfcfcf"
        android:layout_marginLeft="5.0dip"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8.0dip">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_download_main_tv" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:text="标题"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="18.0sp"
                android:textColor="@color/main"/>
            <!-- 
            <TextView 
                android:id="@+id/notification_download_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:text="12:22"
                android:textSize="15.0sp"
                android:textColor="@color/main"/> -->
        </LinearLayout>
        <TextView
            android:id="@+id/notification_download_sub_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dip"
            android:layout_marginRight="8dip"
            android:text="内容"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/list_sub"
            android:textColor="@color/sub_main"/>
    </LinearLayout>
</LinearLayout>
