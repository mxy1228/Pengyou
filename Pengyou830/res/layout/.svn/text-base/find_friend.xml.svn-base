<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/empty_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/find_friend_header"
        layout="@layout/sub_header_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="15dip" >

        <!-- 二维码和搜朋友 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_search_friend"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:background="@drawable/table_whole_bg_all"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/search_user_title"
                    android:padding="10dip"
                    android:src="@drawable/search_good_friend" />

                <TextView
                    android:id="@+id/search_good_friend"
                    style="@style/more_tv"
                    android:layout_marginLeft="7dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_user_title" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/search_user_title"
                    android:paddingRight="15dip"
                    android:src="@drawable/next_grey" />
            </LinearLayout>
 
        </LinearLayout>

        <!-- 手机通讯录和 新浪微博导入 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@drawable/table_whole_bg_all"
                android:id="@+id/ll_search_from_contact"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:contentDescription="@string/from_contact"
                    android:src="@drawable/import_from_contact" />

                <TextView
                    android:id="@+id/tv_search_from_contact"
                    style="@style/more_tv"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="3dip"
                    android:text="@string/from_contact" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/from_contact"
                    android:padding="15dip"
                    android:src="@drawable/next_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_from_sina"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_whole_bg_all"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dip"
                        android:contentDescription="@string/from_sina"
                        android:src="@drawable/imprt_from_sina" />

                    <TextView
                        android:id="@+id/tv_search_from_sina"
                        style="@style/more_tv"
                        android:layout_width="fill_parent"
                        android:padding="10dip"
                        android:layout_marginLeft="6dip"
                        android:text="@string/from_sina" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/from_sina"
                        android:paddingRight="15dip"
                        android:src="@drawable/next_grey" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 猜你认识 -->

