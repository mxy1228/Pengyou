<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_personal_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"    android:background="@color/empty_bg" >

    <include
        android:id="@+id/add_friend_headerbar"
        layout="@layout/sub_header_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="4.0"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <EditText
            android:id="@+id/edit_sign"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg" 
            android:gravity="left|top"
            android:hint="@string/userinfo_sign_hint"
            android:inputType="textMultiLine"
            android:maxLines="40"
            android:minLines="5" android:maxLength="40"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="right"
            android:text="@string/edit_tag_hint"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>