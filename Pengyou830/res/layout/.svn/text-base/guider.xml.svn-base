<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.cyou.mrd.pengyou"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/empty_bg">

    <android.support.v4.view.ViewPager
        android:id="@+id/guider_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <LinearLayout 
        android:id="@+id/guider_indicator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20.0dip"
        android:gravity="center">
        <ImageView
            android:id="@+id/guider_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/dot_selected"/>
        <ImageView
            android:id="@+id/guider_dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/dot_unselected"/>
        <ImageView
            android:id="@+id/guider_dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/dot_unselected"/>
        <ImageView
            android:id="@+id/guider_dot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/dot_unselected"/>
        <ImageView
            android:id="@+id/guider_dot5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/dot_unselected"/>
    </LinearLayout>
