<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:background="@drawable/item_xbg"
    android:padding="@dimen/padding">
    <com.cyou.mrd.pengyou.widget.RoundImageView
        android:id="@+id/offical_message_item_avatar_iv"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:layout_marginRight="5.0dip"/>
    
	<LinearLayout 
	    android:layout_width="0.0dip"
	    android:layout_weight="1.0"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
        <TextView
            android:id="@+id/offical_message_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/sub_main"
            android:textSize="@dimen/main"
            android:text="@string/app_name"/>
	    <TextView
	        android:id="@+id/offical_message_item_content_tv"
	        android:layout_marginTop="@dimen/small_padding"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/main"
	        android:textSize="@dimen/main"
	        android:text="XXXXXXX"/>
	    <ImageButton 
	        android:id="@+id/offical_message_item_detail_ibtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitCenter"
	        android:background="@null"
	        android:layout_marginTop="@dimen/small_padding"
	        android:src="@drawable/offical_message_item_detail_btn_normal"/>
	    <TextView
            android:id="@+id/offical_message_item_date_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sub_main"
            android:textSize="@dimen/date_size"
            android:layout_marginTop="@dimen/small_padding"
            android:text="2013年6月8日"/>
	</LinearLayout>
</LinearLayout>