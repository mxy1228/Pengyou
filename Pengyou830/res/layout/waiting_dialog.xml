<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/waiting_bg" 
    android:padding="20dip">
    <ProgressBar 
        android:layout_width="23dip" 
        android:layout_height="23dip"
        style="@style/loading_progressbar"
        android:indeterminate="false"
        android:indeterminateDrawable="@anim/loading_small" />
	<TextView
	    android:id="@+id/waiting_dialog_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/please_waite"
	    android:textColor="@color/white"
	    android:textSize="@dimen/game_name"
	    android:layout_marginTop="10dip"/>
</LinearLayout>