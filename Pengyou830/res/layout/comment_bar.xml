<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_bar_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4.0dip"
    android:gravity="center_vertical"
    android:layout_gravity="bottom"
    android:visibility="gone"
    android:background="@drawable/friend_search_bg" >
    <EditText
        android:id="@+id/comment_bar_et"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        style="@style/comment_edit"
        android:background="@drawable/search_bg"/>
    <Button
        android:id="@+id/comment_bar_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/main"
        android:layout_marginLeft="@dimen/small_padding"
        android:background="@drawable/header_btn_xbg"
        android:text="@string/comment"/>
</LinearLayout>